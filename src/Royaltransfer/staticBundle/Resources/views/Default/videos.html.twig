{% extends 'StaticBundle::layout.html.twig' %}

{% block title %}{% trans %}Video galerija{% endtrans %}{% endblock %}

{% block content %}
<h1 class="title title-color">{% trans %}Video galerija{% endtrans %}</h1>
<div class="border"><img src="{{ asset('bundles/static/images/border-top.jpg') }}" alt="slika" width=300/></div>
    <div style="padding-left: 50px;">
    {% for item in videos %}
        <div class="border-item galery" style="height: 350px; margin-left: 30px; margin-top: 10px;">
            <iframe src="{{ item.link }}" style="height: 280px;"></iframe><br />
            <span><strong>{{ item.title|length > 50 ? item.title|slice(0, 450) ~ '...' : item.title }}</strong></span><br />
            <span>{{ item.created|date('d.m.Y') }}</span>
        </div>
    {% endfor %}
    </div>
<div style="margin-top: 30px;" class="border"><img src="{{ asset('bundles/static/images/border-bottom.jpg') }}" alt="slika" width=300/></div>
<div class="music-element" style="margin: 550px 0px 0px 500px; width: 50px; height: 30px; position: absolute;">
    <audio controls autoplay>
      <source src="{{ asset('bundles/static/Music/music.mp3') }}" type="audio/mpeg">
      <source src="{{ asset('bundles/static/Music/music.mp3') }}" type="audio/ogg">
      <embed height="50" width="50" src="{{ asset('bundles/static/Music/music.mp3') }}">
    </audio>
</div>
{% endblock %}
